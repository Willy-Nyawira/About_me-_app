<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme for the AboutMe app -->
    <style name="Theme.AboutMe" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary color for the app bar and UI elements -->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- Darker shade of primary color, for status bar -->
        <item name="colorPrimaryDark">@color/purple_700</item>
        <!-- Accent color for buttons and highlights -->
        <item name="colorAccent">@color/teal_200</item>
        <!-- Background color for UI elements -->
        <item name="android:background">@color/white</item>
    </style>

</resources>
